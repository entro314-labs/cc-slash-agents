{
  "name": "@entro314labs/cc-slash-agents",
  "version": "1.0.0",
  "description": "Generate slash commands for Claude Code agents and create multi-agent workflows",
  "keywords": [
    "claude-code",
    "agents",
    "slash-commands",
    "cli",
    "ai",
    "development",
    "anthropic"
  ],
  "author": "Entro314 Labs",
  "license": "MIT",
  "main": "dist/cli.js",
  "type": "module",
  "bin": {
    "cc-slash-agents": "./bin/ccsa.js",
    "ccsa": "./bin/ccsa.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "prepublishOnly": "npm run build && npm run test:run",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write . && biome format --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint:md": "markdownlint-cli2 '**/*.md'",
    "lint:md:fix": "markdownlint-cli2 -fix '**/*.md'"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "fs-extra": "^11.3.1",
    "markdownlint-cli2": "^0.18.1",
    "memfs": "^4.38.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/entro314-labs/cc-slash-agents.git"
  },
  "bugs": {
    "url": "https://github.com/entro314-labs/cc-slash-agents/issues"
  },
  "homepage": "https://github.com/entro314-labs/cc-slash-agents#readme"
}
